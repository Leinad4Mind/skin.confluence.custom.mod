<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.confluence.custom.mod"
  version="1.0.3"
  name="Confluence Customizable Mod"
  provider-name="Mudislander">
  <requires>
    <import addon="xbmc.gui" version="4.0.0"/>
	<import addon="script.favourites" version="4.0.8"/>
	<import addon="script.tvtunes" version="3.0.4"/>
	<import addon="script.globalsearch" version="1.1.1"/>
	<import addon="script.artistslideshow" version="1.5.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A modded version of Jezz_X's Confluence skin</summary>
    <description lang="en">A mod of XBMC's default skin, incorporating many of the now popular tweaks, addons and scripts.</description>
    <disclaimer lang="en">Confluence Customizable Mod is [B]NOT[/B] the Official XBMC Default skin by Jezz_X.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
